<p id="notice"><%= notice %></p>

<h1><%= t('info') %></h1>

<table>
  <thead>
    <tr>
      <th>Gender</th>
      <th>Brand</th>
      <th>Category</th>
      <th>Size</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clothings.each do |clothing| %>
      <tr>
        <td><%= clothing.gender %></td>
        <td><%= clothing.brand %></td>
        <td><%= clothing.category %></td>
        <td><%= clothing.size %></td>
        <td><%= clothing.price %></td>
        <td><%= link_to 'Show', clothing %></td>
        <td><%= link_to 'Edit', edit_clothing_path(clothing) %></td>
        <td><%= link_to 'Destroy', clothing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Add to cart', cart_items_path(clothing_id:clothing) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Clothing', new_clothing_path %>
