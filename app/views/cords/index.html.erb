<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.racquet') %></th>
      <th><%= t('.name') %></th>
      <th><%= t('.colour') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cords.each do |cord| %>
      <tr>
        <td><%= cord.racquet.brand %></td>
        <td><%= cord.name %></td>
        <td><%= cord.colour %></td>
        <td><%= link_to t('.view'), cord %></td>
        <td><%= link_to t('.edit'), edit_cord_path(cord) %></td>
        <td><%= link_to t('.remove'), cord, method: :delete, data: { confirm: t('.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new_cord'), new_cord_path %>
<br>
<%= link_to t('.back'), racquets_path %>
